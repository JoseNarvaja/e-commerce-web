@page
@model DeletePersonalDataModel
@{
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Borrar datos personales</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Borrar sus datos eliminará permanentemente su cuenta, esta acción no se puede revertir</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Introduzca su contraseña" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Borrar mis datos y cerrar mi cuenta</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
